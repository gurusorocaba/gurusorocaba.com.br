<h2>login</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-devise"}) do |f| %>
  <p><%= f.label :email %>
  <%= f.email_field :email %></p>

  <p><%= f.label :password %>
  <%= f.password_field :password %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "no-block" %></p>
  <% end -%>

  <p><%= f.submit "login", :id => "sign_in" %></p>
<% end %>

<%= render :partial => "users/shared/links" %>
